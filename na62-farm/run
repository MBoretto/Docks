#!/bin/bash

DOCKUSERNAME='developer'

${DOCKUSERNAME}
docker run -ti --rm \
    -v `pwd`/${DOCKUSERNAME}:/home/${DOCKUSERNAME} \
	-v /tmp/.X11-unix:/tmp/.X11-unix \
	-e DISPLAY=unix$DISPLAY \
	na62-farm

docker run -ti --rm \
    -v `pwd`/root:/root \
	-v /tmp/.X11-unix:/tmp/.X11-unix \
    -e DISPLAY=unix$DISPLAY \
	na62-farm



